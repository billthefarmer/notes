<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Material.Light.DarkActionBar">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <style name="AppDarkBaseTheme" parent="android:Theme.Material">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="application">@drawable/ic_stop_black_24dp</item>
    <item name="audio">@drawable/ic_volume_up_black_24dp</item>
    <item name="external">@drawable/ic_sd_storage_black_24dp</item>
    <item name="file">@drawable/ic_list_black_24dp</item>
    <item name="folder">@drawable/ic_folder_open_black_24dp</item>
    <item name="image">@drawable/ic_image_black_24dp</item>
    <item name="parent">@drawable/ic_reply_black_24dp</item>
    <item name="video">@drawable/ic_videocam_black_24dp</item>

    <item name="pref_about">@drawable/ic_info_outline_black_24dp</item>
    <item name="pref_theme">@drawable/ic_brightness_high_black_24dp</item>
    <item name="pref_external">@drawable/ic_cloud_circle_black_24dp</item>
    <item name="pref_folder">@drawable/ic_folder_black_24dp</item>
    <item name="pref_name">@drawable/ic_folder_open_black_24dp</item>
    <item name="pref_template_file">@drawable/ic_folder_open_black_24dp</item>
    <item name="pref_use_template">@drawable/ic_list_black_24dp</item>

  </style>

  <!-- Application theme. -->
  <style name="AppDarkTheme" parent="AppDarkBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="application">@drawable/ic_stop_white_24dp</item>
    <item name="audio">@drawable/ic_volume_up_white_24dp</item>
    <item name="external">@drawable/ic_sd_storage_white_24dp</item>
    <item name="file">@drawable/ic_list_white_24dp</item>
    <item name="folder">@drawable/ic_folder_open_white_24dp</item>
    <item name="image">@drawable/ic_image_white_24dp</item>
    <item name="parent">@drawable/ic_reply_white_24dp</item>
    <item name="video">@drawable/ic_videocam_white_24dp</item>

    <item name="pref_about">@drawable/ic_info_outline_white_24dp</item>
    <item name="pref_theme">@drawable/ic_brightness_high_white_24dp</item>
    <item name="pref_external">@drawable/ic_cloud_circle_white_24dp</item>
    <item name="pref_folder">@drawable/ic_folder_white_24dp</item>
    <item name="pref_name">@drawable/ic_folder_open_white_24dp</item>
    <item name="pref_template_file">@drawable/ic_folder_open_white_24dp</item>
    <item name="pref_use_template">@drawable/ic_list_white_24dp</item>

  </style>

</resources>
